<i2nsf-cfi-policy>
    <name>security_policy_for_ddos_attacks</name>
    <rules>
        <name>100_TCP_packets_per_second</name>
        <condition>
            <firewall>
                <transport-layer-protocol>tcp</transport-layer-protocol>
            </firewall>
            <ddos>
                <rate-limit>
                    <packet-rate-threshold>100</packet-rate-threshold>
                </rate-limit>
            </ddos>
        </condition>
        <action>
            <primary-action>
                <action>drop</action>
            </primary-action>
        </action>
    </rules>
</i2nsf-cfi-policy>