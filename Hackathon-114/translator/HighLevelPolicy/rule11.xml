<i2nsf-cfi-policy>
    <name>allow_geolocation</name>
    <rules>
        <name>geolocation_source</name>
        <condition>
            <firewall>
                <destination>employees</destination>
            </firewall>
            <voice>
                <source-id>malicious-id</source-id>
            </voice>
            <url-category>
                <url-name>sns-websites</url-name>
            </url-category>
            <ddos>
                <rate-limit>
                    <packet-rate-threshold>100</packet-rate-threshold>
                </rate-limit>
            </ddos>
            <context>
                <time>
                    <start-date-time>2021-03-11T09:00:00.00Z</start-date-time>
                    <end-date-time>2021-12-31T18:00:00.00Z</end-date-time>
                    <period>
                        <start-time>09:00:00Z</start-time>
                        <end-time>18:00:00Z</end-time>
                        <day>monday</day>
                        <day>tuesday</day>
                        <day>wednesday</day>
                        <day>thursday</day>
                        <day>friday</day>
                    </period>
                    <frequency>weekly</frequency>
                </time>
            </context>
        </condition>
        <action>
            <primary-action>
                <action>pass</action>
            </primary-action>
        </action>
    </rules>
</i2nsf-cfi-policy>