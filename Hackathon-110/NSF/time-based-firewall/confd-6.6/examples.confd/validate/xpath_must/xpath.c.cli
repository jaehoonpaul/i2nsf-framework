        </exec>
      </callback>
      <params>
        <param>
          <optional/>
          <type><void/></type>
          <name>trace</name>
          <prefix>--verbose</prefix>
        </param>
        <param>
          <info>&lt;expression&gt;</info>
          <help>XPath must expression to evaluate</help>
          <flag>--xpath-must</flag>
