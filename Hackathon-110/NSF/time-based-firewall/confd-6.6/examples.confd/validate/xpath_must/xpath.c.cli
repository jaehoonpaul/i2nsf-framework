<?xml version="1.0"?>                               <!-- -*- mode: nxml -*- -->

<clispec xmlns="http://tail-f.com/ns/clispec/1.0" style="c">

  <operationalMode>
    <cmd name="xpath">
      <info>Evaluate xpath expression</info>
      <help>Evaluate xpath expression</help>
      <callback>
        <exec>
          <osCommand>maapi</osCommand>
          <args>--xpath-initial-path '$(ipath)'</args>
        </exec>
      </callback>
      <params>
        <param>
          <optional/>
          <type><void/></type>
          <name>trace</name>
          <prefix>--verbose</prefix>
        </param>
        <param>
          <info>&lt;expression&gt;</info>
          <help>XPath expression to evaluate</help>
          <flag>--xpath</flag>
        </param>
      </params>
    </cmd>
  </operationalMode>

